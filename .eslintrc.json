{
  "extends": [
    "airbnb-base",
    "plugin:mozilla/recommended"
  ],
  "env": {
    "webextensions": true,
    "browser": true
  },
  "globals": {
    "add_task": true,
    "is": true,
    "ok": true
  },
  "rules": {
    "object-curly-newline": ["error", {"consistent": true}],
    "object-curly-spacing": ["off"],
    "no-plusplus": ["off"],
    "prefer-destructuring": ["off"],
    "no-use-before-define": ["error", {"functions": false}]
  }
}
